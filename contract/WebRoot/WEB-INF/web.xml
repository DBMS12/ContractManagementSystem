<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	 <!-- Configure the access of IndexServlet -->
	<servlet>
		<!-- Set IndexServlet name -->
		<servlet-name>IndexServlet</servlet-name>
		<!-- Set the IndexServlet class that processing requests: complete package path + class name -->
		<servlet-class>web.IndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<!-- The IndexServlet name should keep consistent as above-mentioned -->
		<servlet-name>IndexServlet</servlet-name>
		<!-- The access path of IndexServlet -->
		<url-pattern>/IndexServlet</url-pattern>
	</servlet-mapping>
	
	
	<!-- toRegister show -->
	<servlet>
			<servlet-name>toRegister</servlet-name>
			<servlet-class>web.ToRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
			<servlet-name>toRegister</servlet-name>
			<url-pattern>/toRegister</url-pattern>
	</servlet-mapping>
	
	
	<!-- RegisterServlet show -->
	<servlet>
			<servlet-name>Register</servlet-name>
			<servlet-class>web.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
			<servlet-name>Register</servlet-name>
			<url-pattern>/Register</url-pattern>
	</servlet-mapping>
	
	
	
	
	<!-- Configure the access of ToLoginServlet-->
	<servlet>
		<servlet-name>toLogin</servlet-name>
		<servlet-class>web.ToLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>toLogin</servlet-name>
		<url-pattern>/toLogin</url-pattern>
	</servlet-mapping>
	
	
	
	<!-- Configure the access of ToNewUserServlet-->
	<servlet>
		<servlet-name>toNewUser</servlet-name>
		<servlet-class>web.ToNewUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>toNewUser</servlet-name>
		<url-pattern>/toNewUser</url-pattern>
	</servlet-mapping>
	
	
	
	
	<!-- Configure the access of ToErrorServlet-->
	<servlet>
		<servlet-name>toError</servlet-name>
		<servlet-class>web.ToErrorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>toError</servlet-name>
		<url-pattern>/toError</url-pattern>
	</servlet-mapping>
	
	
	
	
	<!-- Configure the access of LoginServlet-->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>web.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	
	
	
	<!-- Configure the access of LogoutServlet-->
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>web.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	
	
	
	
	
	
	
	
	
</web-app>